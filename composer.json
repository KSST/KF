{
    "name": "ksst/kf",
    "description": "Koch Framework",
    "license": "MIT",
    "keywords": ["framework", "full-stack", "cmf"],
    "type": "library",
    "authors": [
        {
            "name": "Jens A. Koch",
            "email": "jakoch@web.de"
        }
    ],
    "support": {
        "source": "https://github.com/KSST/KF/",
        "issues": "https://github.com/KSST/KF/issues/"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "codemirror/CodeMirror",
                "version": "5.65.16",
                "dist": {
                    "url": "https://github.com/codemirror/codemirror5/archive/refs/tags/5.65.16.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php"                             : ">=5.5",
        "pyrech/composer-changelogs"      : "^1.3",
        "doctrine/orm"                    : "^2.5",
        "doctrine/migrations"             : "^1.2",
        "beberlei/doctrineextensions"     : "^1.0",
        "gedmo/doctrine-extensions"       : "^2.4",
        "smarty/smarty"                   : "^4.5",
        "swiftmailer/swiftmailer"         : "^6.2"
    },
    "require-dev": {
        "mikey179/vfsstream"              : "^1.6",
        "fabpot/php-cs-fixer"             : "*",
        "phpunit/phpunit"                 : "^4.5",
        "doctrine/data-fixtures"          : "*",
        "firephp/firephp-core"            : "*",
        "satooshi/php-coveralls"          : "^0.7"
    },
    "suggest": {
        "ext-apc"         : "*",
        "ext-gettext"     : "*",
        "ext-intl"        : "*",
        "ext-json"        : "*",
        "ext-mbstring"    : "*",
        "ext-yaml"        : "*"
    },
    "autoload": {
        "psr-0": { "Koch\\": "framework/" }
    },
    "autoload-dev": {
        "psr-0": { "KochTest\\": "tests/" }
    },
    "scripts": {
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "config": {
      "preferred-install": "dist"
    }
}

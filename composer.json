{
    "name": "ksst/kf",
    "description": "Koch Framework",
    "license": "MIT",
    "keywords": ["framework", "full-stack", "cmf"],
    "type": "library",
    "authors": [
        {
            "name": "Jens A. Koch",
            "email": "jakoch@web.de"
        }
    ],
    "support": {

        "source": "https://github.com/KSST/KF/",
        "issues": "https://github.com/KSST/KF/issues/"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "codemirror/CodeMirror",
                "version": "4.12.0",
                "dist": {
                    "url": "https://github.com/codemirror/CodeMirror/archive/v4.12.0.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php"                             : ">=5.5",
        "doctrine/orm"                    : "~2.*",
        "doctrine/migrations"             : "dev-master",
        "beberlei/DoctrineExtensions"     : "dev-master",
        "gedmo/doctrine-extensions"       : "dev-master",
        "smarty/smarty"                   : "3.1.*",
        "swiftmailer/swiftmailer"         : "~5.*"
    },
    "require-dev": {
        "mikey179/vfsStream"              : "*",
        "phpunit/phpunit"                 : "~4.*",
        "phpunit/dbunit"                  : "*",
        "doctrine/data-fixtures"          : "*",
        "satooshi/php-coveralls"          : "dev-master"
    },
    "suggest": {
        "ext-apc"         : "*",
        "ext-gettext"     : "*",
        "ext-intl"        : "*",
        "ext-json"        : "*",
        "ext-mbstring"    : "*",
        "ext-yaml"        : "*"
    },
    "autoload": {
        "psr-0": { "Koch\\": "framework/" }
    },
    "autoload-dev": {
        "psr-0": { "KochTest\\": "tests/" }
    },
    "scripts": {
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "minimum-stability": "dev",
    "config": {
      "preferred-install": "dist",
      "github-oauth": {
          "github.com": "754f8af6145eb3bb532feff61e9c29611174ebea"
      }
    }
}

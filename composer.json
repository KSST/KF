{
    "name": "ksst/kf",
    "description": "Koch Framework",
    "license": "GPL-2.0+",
    "keywords": ["framework", "full-stack", "cms", "cmf"],
    "type": "library",
    "authors": [
        {
            "name": "Jens-AndrÃ© Koch",
            "email": "jakoch@web.de"
        }
    ],
    "support": {
        "irc": "irc://irc.freenode.org/koch",
        "source": "https://github.com/KSST/KF/",
        "issues": "https://github.com/KSST/KF/issues/"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "marijnh/CodeMirror",
                "version": "4.3.0",
                "dist": {
                    "url": "https://github.com/marijnh/CodeMirror/archive/v4.3.0.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php"                             : ">=5.3.3",
        "doctrine/orm"                    : "2.4.*",
        "doctrine/migrations"             : "dev-master",
        "beberlei/DoctrineExtensions"     : "dev-master",
        "gedmo/doctrine-extensions"       : "dev-master",
        "smarty/smarty"                   : "3.1.17",
        "swiftmailer/swiftmailer"         : "5.2.*"
    },
    "not-required-now": {
        "imagine/imagine"                 : "~0.5.0",
        "mpdf/mpdf"                       : "dev-master",
        "tcpdf/tcpdf"                     : "dev-master",
        "marijnh/CodeMirror"              : "4.3.0",
        "simplepie/simplepie"             : "dev-master"
    },
    "require-dev": {
        "mikey179/vfsStream"              : "*",
        "phpunit/phpunit"                 : "4.2.*@dev",
        "phpunit/dbunit"                  : "1.3.*",
        "doctrine/data-fixtures"          : "*@dev",
        "firephp/firephp-core"            : "dev-master",
        "satooshi/php-coveralls"          : "dev-master"
    },
    "suggest": {
        "ext-apc"         : "*",
        "ext-gettext"     : "*",
        "ext-intl"        : "*",
        "ext-json"        : "*",
        "ext-mbstring"    : "*",
        "ext-yaml"        : "*"
    },
    "autoload": {
        "psr-4": { "Koch\\": "framework/" }
    },
    "autoload-dev": {
        "psr-4": { "KochTest\\": "tests/" }
    },
    "scripts": {
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "minimum-stability": "dev"
}

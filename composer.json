{
    "name": "ksst/kf",
    "description": "Koch Framework",
    "license": "MIT",
    "keywords": ["framework", "full-stack", "cmf"],
    "type": "library",
    "authors": [
        {
            "name": "Jens A. Koch",
            "email": "jakoch@web.de"
        }
    ],
    "support": {
        "source": "https://github.com/KSST/KF/",
        "issues": "https://github.com/KSST/KF/issues/"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "codemirror/codemirror",
                "version": "5.65.16",
                "dist": {
                    "url": "https://github.com/codemirror/codemirror5/archive/refs/tags/5.65.16.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php"                             : ">=8.2",
        "doctrine/orm"                    : "^3.2",
        "doctrine/migrations"             : "^3.7",
        "beberlei/doctrineextensions"     : "^1.5",
        "gedmo/doctrine-extensions"       : "^3",
        "smarty/smarty"                   : "^5.3",
        "symfony/mailer"                  : "^7.1"
    },
    "require-dev": {
        "browscap/browscap-php"           : "^7.4",
        "doctrine/data-fixtures"          : "*",
        "friendsofphp/php-cs-fixer"       : "*",
        "mikey179/vfsstream"              : "^1.6",
        "php-coveralls/php-coveralls"     : "^2.7",
        "phpstan/phpstan"                 : "^1.11",
        "phpunit/phpunit"                 : "^11"
    },
    "suggest": {
        "ext-apc"         : "*",
        "ext-gettext"     : "*",
        "ext-intl"        : "*",
        "ext-json"        : "*",
        "ext-mbstring"    : "*",
        "ext-yaml"        : "*"
    },
    "autoload": {
        "psr-0": { "Koch\\": "framework/" }
    },
    "autoload-dev": {
        "psr-0": { "KochTest\\": "tests/" }
    },
    "scripts": {
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "config": {
      "preferred-install": "dist",
      "optimize-autoloader": true,
      "sort-packages": true
    }
}
